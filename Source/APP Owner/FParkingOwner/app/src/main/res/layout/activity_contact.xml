<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:keepScreenOn="true"
    tools:context=".CheckOut">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/header"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Liên Hệ"
            android:textColor="@color/whitetext"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="320dp"
            android:layout_height="144dp"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/checkoutinfo" />


        <ImageView
            android:id="@+id/imageViewBackContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_action_backwhile" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="225dp"
            android:layout_height="139dp"
            android:layout_below="@+id/imageView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/logoapp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView21"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Mọi thắc mắc xin liên hệ:" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="167dp"
            android:layout_height="142dp"
            android:layout_above="@+id/textView14"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/automobile" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="Phiên bản 1.1.1" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="26dp"
            android:layout_height="22dp"
            android:layout_alignStart="@+id/imageView28"
            android:layout_below="@+id/imageView28"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_action_mail" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView26"
            android:layout_below="@+id/imageView26"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_action_mylocation" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView26"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/imageView26"
            android:text="contact@fparking.com"
            android:textColor="@color/white_greyish"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView27"
            android:layout_marginLeft="7dp"
            android:layout_toEndOf="@+id/imageView26"
            android:text="Trường Đại học FPT, KM29 Đại Lộ Thăng Long, Thạch Hoà, Thạch Thất, Hà Nội"
            android:textColor="@color/white_greyish"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView21"
            android:layout_alignTop="@+id/imageView13"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_action_phone" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignTop="@+id/imageView28"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageView28"
            android:text="0128 8028 666"
            android:textColor="@color/white_greyish"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>