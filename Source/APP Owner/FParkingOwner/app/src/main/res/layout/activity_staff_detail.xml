<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".DetailStaffActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/header"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Thông Tin Nhân Viên"
            android:textColor="@color/whitetext"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="16dp" />


        <ImageView
            android:id="@+id/imageViewBackProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_action_backwhile" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="174dp"
            android:layout_below="@+id/imageView9"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/infodetail" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="178dp"
            android:layout_height="117dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/logo_profile2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="15dp"
            android:text="Họ và tên"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tbNameSD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="23dp"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Nguyễn Văn Hưng"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="319dp"
            android:layout_height="1px"
            android:layout_below="@+id/tbNameSD"
            android:layout_marginLeft="33dp"
            android:background="@color/white_greyish" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/tbNameSD"
            android:layout_marginTop="10dp"
            android:text="Số điện thoại"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tbPhoneSD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="23dp"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="01647383196"
            android:inputType="phone"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="319dp"
            android:layout_height="1px"
            android:layout_below="@+id/tbPhoneSD"
            android:layout_marginLeft="33dp"
            android:background="@color/white_greyish" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/tbPhoneSD"
            android:layout_marginTop="10dp"
            android:text="Địa chỉ"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tbAddressSD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="23dp"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="sdsdsdsdsdsdsdsds"
            android:inputType="textPostalAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="319dp"
            android:layout_height="1px"
            android:layout_below="@+id/tbAddressSD"
            android:layout_marginLeft="33dp"
            android:background="@color/white_greyish" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_selector3"
            android:text="CẬP NHẬT"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            android:paddingLeft="20dp"
            android:text="Cập nhật thông tin thành công"
            android:textColor="@android:color/holo_green_dark"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/tbAddressSD"
            android:layout_marginTop="10dp"
            android:text="Mật khẩu:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tbPassSD"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tbNameSD"
            android:layout_below="@+id/textView10"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:text="........................"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="319dp"
            android:layout_height="1px"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/tbPassSD"
            android:background="@color/white_greyish" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="319dp"
            android:layout_height="34dp"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/tbPassSD"
            android:layout_marginTop="23dp" />

        <ImageView
            android:id="@+id/imgResetPass"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/tbPassSD"
            android:layout_alignEnd="@+id/tbPassSD"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/change" />
        <View
            android:layout_width="319dp"
            android:layout_height="1px"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/spinner2"
            android:background="@color/white_greyish" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>