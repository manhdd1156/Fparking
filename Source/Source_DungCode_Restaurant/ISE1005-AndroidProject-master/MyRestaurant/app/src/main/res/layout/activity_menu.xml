<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ise1005.edu.fpt.vn.myrestaurant.manager.Menu">

    <EditText
        android:id="@+id/mMenuEdtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/mTableBtnSearch"
        android:layout_toStartOf="@+id/mTableBtnSearch"
        android:ems="10"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/mMenuLv"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <Button
        android:id="@+id/mMenuBtnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Menu" />

</LinearLayout>
