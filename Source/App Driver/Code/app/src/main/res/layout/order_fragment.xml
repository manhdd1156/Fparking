<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/n"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <ImageView
        android:id="@+id/imageViewParking"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#009dff"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/anh1" />

    <Button
        android:id="@+id/buttonOrderFragment"
        android:layout_width="332dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="@drawable/button_selector"
        android:text="ĐẶT CHỖ NGAY"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonOrderFragment"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:text="234 Trần Duy Hưng"
        android:textColor="@color/whitetext" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewParking"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/slot" />

    <TextView
        android:id="@+id/textViewEmptySpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageViewParking"
        android:layout_marginStart="29dp"
        android:text="24"
        android:textColor="@color/white_greyish"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSlots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewEmptySpace"
        android:layout_alignParentStart="true"
        android:layout_marginStart="87dp"
        android:text="/25 chỗ"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="263dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/info" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmptySpace"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="Thông tin chi tiết" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/info" />

    <TextView
        android:id="@+id/textViewIDParking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TAT001"
        android:textColor="#c8949393"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewIDParking"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Bãi xe Trần Duy Hưng" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/textViewEmptySpace"
        android:layout_below="@+id/imageView3"
        android:layout_marginStart="-29dp"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/info" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewEmptySpace"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_action_money" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textViewEmptySpace"
        android:text="25.000/h" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textViewIDParking"
        app:srcCompat="@drawable/ic_action_time" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonOrderFragment"
        android:layout_below="@+id/imageView3"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:text="00:00 - 24:00" />

    <ImageView
        android:id="@+id/imageViewDirection"
        android:layout_width="176dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/chiduongandcall" />

    <ImageView
        android:id="@+id/imageViewCall"
        android:layout_width="176dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView5"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/chiduongandcall" />

    <TextView
        android:id="@+id/textViewDirectionGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewSlots"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="23dp"
        android:text="Chỉ Đường"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textViewCallGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewTime"
        android:layout_alignTop="@+id/textViewDirectionGrey"
        android:text="Liên Hệ"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageViewDirectionIconGrey"
        android:layout_width="44dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        />

    <ImageView
        android:id="@+id/imageViewCallIconGrey"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/imageView7"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="12dp"
         />


</RelativeLayout>