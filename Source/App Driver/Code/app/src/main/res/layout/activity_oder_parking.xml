<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderParking">

    <FrameLayout
        android:id="@+id/fragmentOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="189dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">


            <ImageView
                android:id="@+id/imageViewParking"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#009dff"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/anh1" />

            <Button
                android:id="@+id/buttonDat_Cho_Ngay"
                android:layout_width="332dp"
                android:layout_height="51dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_selector"
                android:text="ĐẶT CHỖ NGAY"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textViewAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/buttonDat_Cho_Ngay"
                android:layout_alignParentTop="true"
                android:layout_marginTop="166dp"
                android:text="234 Trần Duy Hưng"
                android:textColor="@color/whitetext" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageViewParking"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/slot" />

            <TextView
                android:id="@+id/textViewEmptySpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageViewParking"
                android:layout_marginStart="29dp"
                android:text="24"
                android:textColor="@color/white_greyish"
                android:textSize="45sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textViewEmptySpace"
                android:layout_alignParentStart="true"
                android:layout_marginStart="87dp"
                android:text="/25 chỗ"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="263dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/info" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewEmptySpace"
                android:layout_centerHorizontal="true"
                android:paddingTop="20dp"
                android:text="Thông tin chi tiết" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView4"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/info" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewEmptySpace"
                android:layout_below="@+id/imageView4"
                android:layout_marginTop="13dp"
                app:srcCompat="@drawable/ic_action_money" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textViewEmptySpace"
                android:text="25.000/h" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView6"
                android:layout_below="@+id/imageView4"
                android:layout_marginTop="13dp"
                app:srcCompat="@drawable/ic_action_time" />

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView6"
                android:text="00:00 - 24:00" />

            <ImageView
                android:id="@+id/imageViewDirection"
                android:layout_width="176dp"
                android:layout_height="67dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView5"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/direction" />

            <ImageView
                android:id="@+id/imageViewCall"
                android:layout_width="176dp"
                android:layout_height="66dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/imageViewDirection"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/call" />

        </RelativeLayout>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>