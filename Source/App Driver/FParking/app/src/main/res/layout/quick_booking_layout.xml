<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/header" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Bãi xe gần bạn"
        android:textColor="@color/whitetext"
        android:textSize="15dp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewPriceQB"
        android:layout_marginTop="25dp"
        android:background="@color/white_greyish" />

    <Button
        android:id="@+id/btnOKQB"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/textViewPriceQB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_selector"
        android:padding="10dp"
        android:text="Đồng ý"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCancelQB"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnOKQB"
        android:layout_marginEnd="49dp"
        android:background="@drawable/button_selector"
        android:padding="10dp"
        android:text="Hủy"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAddressQB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView9"
        android:layout_marginStart="50dp"
        android:drawableLeft="@drawable/ic_action_address"
        android:gravity="center_vertical"
        android:text="N/A"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textViewTotalTimeQB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewAddressQB"
        android:layout_below="@+id/textViewAddressQB"
        android:drawableLeft="@drawable/ic_action_timeoc"
        android:gravity="center_vertical"
        android:text="N/A"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textViewPriceQB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewTotalTimeQB"
        android:layout_below="@+id/textViewTotalTimeQB"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_action_coin"
        android:gravity="center_vertical"
        android:text="N/A"
        android:textSize="13sp" />
</RelativeLayout>