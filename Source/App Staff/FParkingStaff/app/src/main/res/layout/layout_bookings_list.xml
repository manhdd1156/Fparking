<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnItemAccept"
                android:layout_width="72dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@id/btnItemCancel"
                android:background="@drawable/button_selector"
                android:text="THANH TOÁN"
                android:textColor="#FFFFFF"
                android:textSize="8sp" />

            <Button
                android:id="@+id/btnItemCancel"
                android:layout_width="73dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_selector"
                android:text="HỦY"
                android:textColor="#FFFFFF"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="71dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/carorder" />


            <TextView
                android:id="@+id/tvItemLicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imageView7"
                android:text="29L6-33212"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemTypeCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tvItemLicense"
                android:layout_below="@id/tvItemLicense"
                android:layout_marginTop="10dp"
                android:text="dưới 9 chỗ" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>