<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background"
    tools:context=".DetailStaffActivity">


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/header"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Thêm nhân viên"
            android:textColor="@color/whitetext"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="16dp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="174dp"
            android:layout_below="@+id/imageView9"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/infodetail" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="178dp"
            android:layout_height="117dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/logo_profile2" />

        <EditText
            android:id="@+id/tbNameAddStaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Họ và tên"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

    <View
        android:layout_width="300dp"
        android:layout_height="1px"
        android:layout_below="@+id/tbNameAddStaff"
        android:layout_centerHorizontal="true"
        android:background="@color/white_greyish" />


        <EditText
            android:id="@+id/tbPhoneAddStaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tbNameAddStaff"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="7dp"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

    <View
        android:layout_width="300dp"
        android:layout_height="1px"
        android:layout_below="@+id/tbPhoneAddStaff"
        android:layout_centerHorizontal="true"
        android:background="@color/white_greyish" />


    <EditText
        android:id="@+id/tbAddressAddStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbPhoneAddStaff"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Địa chỉ"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="16sp" />

    <View
        android:layout_width="300dp"
        android:layout_height="1px"
        android:layout_below="@+id/tbAddressAddStaff"
        android:layout_centerHorizontal="true"
        android:background="@color/white_greyish" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="149dp"
            android:layout_height="38dp"
            android:layout_below="@+id/dropdownParking"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_selector"
            android:text="THÊM"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/tbPassAddStaff"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tbNameAddStaff"
        android:layout_below="@+id/tbAddressAddStaff"
        android:layout_marginTop="7dp"
        android:background="@android:color/transparent"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Mật khẩu"
        android:inputType="text|textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="16sp" />

    <View
        android:layout_width="300dp"
        android:layout_height="1px"
        android:layout_below="@+id/tbPassAddStaff"
        android:layout_centerHorizontal="true"
        android:background="@color/white_greyish" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/dropdownParking"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbPassAddStaff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:hint="Chọn bãi xe"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>

